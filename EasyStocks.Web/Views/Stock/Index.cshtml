@model StockListResponse

<h1>Stocks List</h1>

<a class="nav-link text-dark btn btn-primary" asp-area="" asp-controller="Stock" asp-action="AddStock">Add Stock</a>

@if (Model != null && Model.Stocks != null && Model.Stocks.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Stock Title</th>
                <th>Company Name</th>
                <th>Stock Type</th>
                <th>Total Units</th>
                <th>Price Per Unit</th>
                <th>Opening Date</th>
                <th>Closing Date</th>
                <th>Minimum Purchase</th>
                <th>Initial Deposit</th>
                <th>Date Listed</th>
                <th>Listed By</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stock in Model.Stocks)
            {
                <tr>
                    <td>@stock.Id</td>
                    <td>@stock.StockTitle</td>
                    <td>@stock.CompanyName</td>
                    <td>@stock.StockType</td>
                    <td>@stock.TotalUnits</td>
                    <td>@stock.PricePerUnit</td>
                    <td>@stock.OpeningDate.ToShortDateString()</td>
                    <td>@stock.ClosingDate.ToShortDateString()</td>
                    <td>@stock.MinimumPurchase</td>
                    <td>@stock.InitialDeposit</td>
                    <td>@stock.DateListed.ToShortDateString()</td>
                    <td>@stock.ListedBy</td>
                    <td>
                        <form asp-action="DeleteStock" asp-route-id="@stock.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this stock?');">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            @Html.AntiForgeryToken()
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No stocks found.</p>
}
