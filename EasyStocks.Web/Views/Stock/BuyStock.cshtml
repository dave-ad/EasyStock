@model BuyStockRequest


@{
    ViewData["Title"] = "Buy Stock";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="BuyStock" method="post">
    <div class="form-group">
        <label asp-for="StockTitle" class="control-label"></label>
        <input asp-for="StockTitle" class="form-control" readonly />
        <span asp-validation-for="StockTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CompanyName" class="control-label"></label>
        <input asp-for="CompanyName" class="form-control" readonly />
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UnitPurchase" class="control-label"></label>
        <input asp-for="UnitPurchase" class="form-control" />
        <span asp-validation-for="UnitPurchase" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="StockId" />
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-primary">Buy</button>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to Stock List</a>
</div>

