@model CreateStockRequest
@Html.AntiForgeryToken()

@{
    ViewData["Title"] = "Add Stock";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="AddStock" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <hr />

    <div class="form-group">
        <label asp-for="StockTitle" class="control-label">Stock Title</label>
        <input asp-for="StockTitle" class="form-control" />
        <span asp-validation-for="StockTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CompanyName" class="control-label">Company Name</label>
        <input asp-for="CompanyName" class="form-control" />
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StockType" class="control-label">Stock Type</label>
        <input asp-for="StockType" class="form-control" />
        <span asp-validation-for="StockType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalUnits" class="control-label">Total Units</label>
        <input asp-for="TotalUnits" class="form-control" />
        <span asp-validation-for="TotalUnits" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PricePerUnit" class="control-label">Price Per Unit</label>
        <input asp-for="PricePerUnit" class="form-control" />
        <span asp-validation-for="PricePerUnit" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OpeningDate" class="control-label">Opening Date</label>
        <input asp-for="OpeningDate" class="form-control" />
        <span asp-validation-for="OpeningDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClosingDate" class="control-label">Closing Date</label>
        <input asp-for="ClosingDate" class="form-control" />
        <span asp-validation-for="ClosingDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MinimumPurchase" class="control-label">Minimum Purchase</label>
        <input asp-for="MinimumPurchase" class="form-control" />
        <span asp-validation-for="MinimumPurchase" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateListed" class="control-label">Date Listed</label>
        <input asp-for="DateListed" class="form-control" />
        <span asp-validation-for="DateListed" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ListedBy" class="control-label">Listed By</label>
        <input asp-for="ListedBy" class="form-control" />
        <span asp-validation-for="ListedBy" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}