@model GetWatchList

@{
    ViewData["Title"] = "Watchlist";
}

<h2>@ViewData["Title"]</h2>

@if (Model.WatchLists != null && Model.WatchLists.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Stock Title</th>
                <th>Company Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.WatchLists)
            {
                <tr>
                    <td>@item.StockTitle</td>
                    <td>@item.CompanyName</td>
                    <td>
                        <form asp-action="RemoveFromWatchList" asp-controller="Stock" method="post">
                            <input type="hidden" name="userId" value="@item.UserId" />
                            <input type="hidden" name="stockId" value="@item.StockId" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Your watchlist is empty.</p>
}
