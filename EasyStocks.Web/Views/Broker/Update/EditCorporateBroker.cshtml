@model UpdateCorporateBrokerRequest
@Html.AntiForgeryToken()

@{
    ViewData["Title"] = "Update Corporate Broker";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<h3>Edit corporate broker data</h3>

<form asp-action="UpdateCorporateBroker" method="post">
    @* <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" name="_method" value="PUT" /> *@
    <input type="hidden" asp-for="BrokerId" />

    <h6>Update Company Information</h6>
    <div class="form-group">
        <label asp-for="CompanyName" class="control-label">Company Name</label>
        <input asp-for="CompanyName" class="form-control" />
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CompanyEmail" class="control-label">Company Email</label>
        <input asp-for="CompanyEmail" class="form-control" />
        <span asp-validation-for="CompanyEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CompanyMobileNumber" class="control-label">Company Mobile Number</label>
        <input asp-for="CompanyMobileNumber" class="form-control" />
        <span asp-validation-for="CompanyMobileNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StreetNo" class="control-label">Street Number</label>
        <input asp-for="StreetNo" class="form-control" />
        <span asp-validation-for="StreetNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StreetName" class="control-label">Street Name</label>
        <input asp-for="StreetName" class="form-control" />
        <span asp-validation-for="StreetName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City" class="control-label">City</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="State" class="control-label">State</label>
        <input asp-for="State" class="form-control" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ZipCode" class="control-label">ZipCode</label>
        <input asp-for="ZipCode" class="form-control" />
        <span asp-validation-for="ZipCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CACRegistrationNumber" class="control-label">CAC Registration Number</label>
        <input asp-for="CACRegistrationNumber" class="form-control" />
        <span asp-validation-for="CACRegistrationNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StockBrokerLicense" class="control-label">Stock Broker License</label>
        <input asp-for="StockBrokerLicense" class="form-control" />
        <span asp-validation-for="StockBrokerLicense" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateCertified" class="control-label">Date Certified</label>
        <input asp-for="DateCertified" type="date" class="form-control" />
        <span asp-validation-for="DateCertified" class="text-danger"></span>
        </div>
    <button type="submit" class="btn btn-primary">Update Broker</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}