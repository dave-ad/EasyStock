@model UpdateIndividualBrokerRequest
@Html.AntiForgeryToken()

@{
    ViewData["Title"] = "Update Individual Broker";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<h3>Edit individual broker account</h3>

<form asp-action="UpdateIndividualBroker" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" name="_method" value="PUT" />
    <input type="hidden" asp-for="BrokerId" />

    <h6>Business Address Information</h6>

    <div class="form-group">
        <label asp-for="StreetNo">Street Number</label>
        <input asp-for="StreetNo" class="form-control" />
        <span asp-validation-for="StreetNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StreetName">Street Name</label>
        <input asp-for="StreetName" class="form-control" />
        <span asp-validation-for="StreetName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ZipCode">ZipCode</label>
        <input asp-for="ZipCode" class="form-control" />
        <span asp-validation-for="ZipCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StockBrokerLicense">Stock Broker License</label>
        <input asp-for="StockBrokerLicense" class="form-control" />
        <span asp-validation-for="StockBrokerLicense" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateCertified">Date Certified</label>
        <input asp-for="DateCertified" type="date" class="form-control" />
        <span asp-validation-for="DateCertified" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update Broker</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}