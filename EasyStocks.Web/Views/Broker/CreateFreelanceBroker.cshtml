@model CreateFreelanceBrokerRequest
@Html.AntiForgeryToken()

<h1>Freelance Broker</h1>
<hr />
@{
    ViewData["Title"] = "Freelance Broker";
}

@if (ViewBag.BrokerCreatedMessage != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.BrokerCreatedMessage
    </div>
}

<h3>Create a frelance broker account</h3>
<p>This would include your details and professional qualification</p>

<form asp-action="CreateFreelanceBroker" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <hr />
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" id="FirstName" name="FirstName" required>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" id="LastName" name="LastName" required>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OtherNames"></label>
        <input asp-for="OtherNames" class="form-control" id="OtherNames" name="OtherNames">
        <span asp-validation-for="OtherNames" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" id="Email" name="Email" required>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MobileNumber"></label>
        <input asp-for="MobileNumber" class="form-control" id="MobileNumber" name="MobileNumber" required>
        <span asp-validation-for="MobileNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender">Gender</label>
        <select asp-for="Gender" class="form-control" id="Gender" name="Gender" required>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProfessionalQualification"></label>
        <input asp-for="ProfessionalQualification" class="form-control" id="ProfessionalQualification" name="ProfessionalQualification" required>
        <span asp-validation-for="ProfessionalQualification" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
