@model StockListResponse
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


@if (Model != null && Model.Stocks != null && Model.Stocks.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Stock Title</th>
                <th>Company Name</th>
                <th>Stock Type</th>
                <th>Total Units</th>
                <th>Price Per Unit</th>
                <th>Opening Date</th>
                <th>Closing Date</th>
                <th>Minimum Purchase</th>
                <th>Initial Deposit</th>
                <th>Date Listed</th>
                <th>Listed By</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stock in Model.Stocks)
            {
                <tr>
                    <td>@stock.StockTitle</td>
                    <td>@stock.CompanyName</td>
                    <td>@stock.StockType</td>
                    <td>@stock.TotalUnits</td>
                    <td>@stock.PricePerUnit</td>
                    <td>@stock.OpeningDate.ToShortDateString()</td>
                    <td>@stock.ClosingDate.ToShortDateString()</td>
                    <td>@stock.MinimumPurchase</td>
                    <td>@stock.InitialDeposit</td>
                    <td>@stock.DateListed.ToShortDateString()</td>
                    <td>@stock.ListedBy</td>
                    <td>
                        <form asp-action="AddToWatchlist" asp-controller="Stock" method="post">
                            <input type="hidden" name="userId" value="@User.Identity.Name" />
                            <input type="hidden" name="stockId" value="@stock.StockId" />
                            <button type="submit" class="btn btn-primary">Add to Watchlist</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No stocks found.</p>
}
